{% extends 'base.html.twig' %}

{% block title %}Librarian index{% endblock %}

{% block body %}
    <h1>Librarian index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Direccion</th>
                <th>Telefono</th>
                <th>Correo_Electronico</th>
                <th>Fecha_Contratacion</th>
                <th>Turno_Trabajo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for librarian in librarians %}
            <tr>
                <td>{{ librarian.id }}</td>
                <td>{{ librarian.Nombre }}</td>
                <td>{{ librarian.Apellido }}</td>
                <td>{{ librarian.Direccion }}</td>
                <td>{{ librarian.Telefono }}</td>
                <td>{{ librarian.CorreoElectronico }}</td>
                <td>{{ librarian.FechaContratacion ? librarian.FechaContratacion|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ librarian.turnoTrabajo }}</td>
                <td>
                    <a href="{{ path('app_librarian_show', {'id': librarian.id}) }}">show</a>
                    <a href="{{ path('app_librarian_edit', {'id': librarian.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_librarian_new') }}">Create new</a>
{% endblock %}
